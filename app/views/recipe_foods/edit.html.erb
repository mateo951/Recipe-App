<%= turbo_frame_tag dom_id(@ingredient) do%>
  <%= form_with(model:[@ingredient.recipe,@ingredient ]) do |form|%>
    <div class="d-flex mt-1 align-items-center">
    <%= form.label :quantity, class:"label-control me-1 ms-1" %>
    <%= form.number_field :quantity, class:"form-control me-1", required: true, min:0.1, max:1000,step:0.1%>
    </div>
    <%= form.submit "Update", class:"btn btn-warning m-1"%>
    <%= link_to "Back", recipe_path(@ingredient.recipe), class:"btn btn-primary"%>
  <% end %>
<% end%>
