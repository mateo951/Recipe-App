<h1 class='text-centered'>
  New recipe
</h1>
<div class="container">
<%= form_for(@recipe, 
  data: { turbo: false },
  url: recipes_path) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %><br />
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, autofocus: true %><br />
  </div>
  <div class="form-group">
    <%= f.label :preparationTime, 'Preparation time'%>
    <%= f.number_field :preparationTime, in: 1.0..4320.0, step: 0.5, autofocus: true%>
    <%= f.label 'Enter time in minutes' %><br />
  </div>
  <div class="form-group">
    <%= f.label :cookingTime, 'Cooking time' %>
    <%= f.number_field :cookingTime, in: 1.0..4320.0, step: 0.5, autofocus: true%>
    <%= f.label 'Enter time in minutes' %><br />
  </div>
  <div class="bold margin-botton-10">
    <%= f.label :public, "Make this recipe public" %>
    <%= f.check_box :public, autofocus: true%>
  </div>
  
  <div class="new-btn">
    <%= f.submit "Create recipe" %>
  </div>
<%end%>
</div>