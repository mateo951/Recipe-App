<h1 class='text-centered mt-3 mb-3'>
  New recipe
</h1>
<div class="container">
<%= form_with(model: @recipe, 
  data: { turbo: false },
  url: recipes_path) do |f| %>
  <div class="mb-3">
    <%= f.label :name,  class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class:"form-control"%><br />
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, autofocus: true, class:"form-control" %><br />
    <%= f.label :preparationTime, 'Preparation time (minutes)', class: "form-label"%>
    <%= f.number_field :preparationTime, in: 1.0..4320.0, step: 0.5, 
    autofocus: true, title: "Enter time in minutes", class:"form-control"%>
    <%= f.label :cookingTime, 'Cooking time (minutes)', class: "form-label" %>
    <%= f.number_field :cookingTime, in: 1.0..4320.0, step: 0.5, 
      autofocus: true, title: "Enter time in minutes", class:"form-control"%>
  </div>
  <div class="mb-3 d-flex align-items-baseline">
    <%= f.label :public, "Make this recipe public", class: "form-label" %>
    <%= f.check_box :public, autofocus: true, class:"form-check", class: "ms-2"%>
  </div>
  
  <%= f.submit "Create recipe", class:"btn btn-primary" %>
<%end%>
</div>